<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">
    <include layout="@layout/main_title_bar" />

    <!--这两个组件  默认是隐藏状态 只有在找回密码  界面 才显示 -->
    <TextView
        android:id="@+id/tv_user_name"
        style="@style/tvFindPswStyle"
        android:layout_marginTop="35dp"
        android:text="您的用户名是？"
        android:visibility="gone" />
    <EditText
        android:id="@+id/et_user_name"
        style="@style/etRegisterStyle"
        android:layout_marginTop="10dp"
        android:background="@drawable/find_psw_icon"
        android:hint="请输入您的用户名"
        android:textSize="18sp"
        android:visibility="gone" />


    <TextView
        style="@style/tvFindPswStyle"
        android:layout_marginTop="15dp"
        android:text="您的姓名是？" />
    <EditText
        android:id="@+id/et_validate_name"
        style="@style/etRegisterStyle"
        android:layout_marginTop="10dp"
        android:background="@drawable/find_psw_icon"
        android:hint="请输入您的姓名"
        android:textSize="18sp" />

    <!--显示 初始密码 的文本信息 ，只有在招呼密码界面  点击验证按钮  才会显示出来-->
    <TextView
        android:id="@+id/tv_reset_psw"
        style="@style/tvFindPswStyle"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:visibility="gone" />
    <Button
        android:id="@+id/btn_validate"
        style="@style/btnRegisterStyle" />
</LinearLayout>
